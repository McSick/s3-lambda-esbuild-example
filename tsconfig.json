{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "outDir": ".build",
      "rootDir": "./src",
      "paths": {
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".serverless", ".build"]
  }